<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editEqual"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textAlignment="viewEnd"
        android:focusable="false"
        android:layout_margin="10dp"
        android:focusableInTouchMode="false"
        android:textSize="60sp"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:text="@string/_0"
        android:gravity="bottom|right"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textSize="60sp"
        app:layout_constraintTop_toBottomOf="@id/editEqual"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/buttonHistory"
        android:layout_width="50dp"
        android:layout_height="75dp"
        android:text="H"
        android:textSize="30dp"
        android:background="@color/blue"
        app:layout_constraintRight_toLeftOf="@id/editText"
        app:layout_constraintTop_toBottomOf="@id/editEqual" />

    <Button
        android:id="@+id/button7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_7"
        android:background="@color/white"
        android:textSize="50sp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/buttonCancel"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_1"
        android:textSize="50sp"
        android:background="@color/white"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_4"
        android:background="@color/white"
        android:textSize="50sp"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonEqual"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_equal"
        android:background="@color/orange"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_plus"
        android:background="@color/violet"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/buttonRemove" />

    <Button
        android:id="@+id/buttonDot"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_dot"
        android:textSize="50sp"
        android:layout_marginStart="5dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

    <Button
        android:id="@+id/buttonDevide"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_devide"
        android:background="@color/violet"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/buttonEqual"
        app:layout_constraintTop_toBottomOf="@+id/buttonMultiply" />

    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_multiply"
        android:background="@color/violet"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/buttonMinus" />

    <Button
        android:id="@+id/button6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_6"
        android:background="@color/white"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@+id/button9"
        app:layout_constraintLeft_toRightOf="@id/button5" />

    <Button
        android:id="@+id/button9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_9"
        android:background="@color/white"
        android:textAlignment="center"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/buttonRemove"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_2"
        android:textSize="50sp"
        android:background="@color/white"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button0"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_0"
        android:background="@color/white"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/buttonDot"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_5"
        android:background="@color/white"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/button8"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_3"
        android:background="@color/white"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonMinus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_minus"
        android:background="@color/violet"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/buttonPlus"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="@string/_8"
        android:background="@color/white"
        android:textSize="50sp"
        app:layout_constraintTop_toBottomOf="@id/buttonCancel"
        app:layout_constraintLeft_toRightOf="@id/button7" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:text="Cancel"
        android:background="@color/orange"
        android:textSize="40sp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/editText"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonRemove"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:text="←"
        android:background="@color/teal_700"
        android:textSize="80sp"
        android:layout_marginEnd="5dp"
        android:gravity="bottom|center"
        app:layout_constraintTop_toBottomOf="@id/editText"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
